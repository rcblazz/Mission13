@{
    ViewData["Title"] = "Home Page";
}

@*This page displays a complete list of all the bowlers --taken from MySql -- updatedbowlingleagueexample database*@

@model List<Bowler>


    <div class="row m-1 p-1">
        <div id="teams" class="col-3">
            <vc:teams></vc:teams>
         </div>
            <div class="col-9">

                @*Display TeamName based on what is selected*@

                @if (ViewBag.SelectedTeam == null)
                {
                    <h1>All Bowlers</h1>
                }
                else
                {
                <h1>@ViewBag.SelectedTeam</h1>
                }

                <table class="table table-bordered table-striped">
                    <thead class="font-weight-bold">
                        <tr>
                            <td>First Name</td>
                            <td>Middle Init</td>
                            <td>Last Name</td>
                            <td>Address</td>
                            <td>City</td>
                            <td>State</td>
                            <td>Zip</td>
                            <td>Phone Number</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.BowlerFirstName</td>
                                <td>@b.BowlerMiddleInit</td>
                                <td>@b.BowlerLastName</td>
                                <td>@b.BowlerAddress</td>
                                <td>@b.BowlerCity</td>
                                <td>@b.BowlerState</td>
                                <td>@b.BowlerZip</td>
                                <td>@b.BowlerPhoneNumber</td>
                                <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID" class="btn btn-outline-info">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID" class=" btn btn-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div>
                    <a asp-controller="Home" asp-action="AddEdit" class="btn btn-primary">Add a Bowler</a>
                </div>
            </div>
        </div>